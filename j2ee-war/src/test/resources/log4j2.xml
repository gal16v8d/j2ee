<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="basePath">./log</Property>
		<Property name="baseProyectName">j2ee-war</Property>
	</Properties>

	<Appenders>
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p [%t] (%c) - %m%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<Root level="OFF">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>